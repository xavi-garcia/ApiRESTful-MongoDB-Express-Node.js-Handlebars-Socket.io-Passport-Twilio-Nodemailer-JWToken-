<section class="vh-100" style="background-color: black;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-6 mb-4 mb-lg-0">
        <div class="card mb-3" style="border-radius: .5rem;">
          <div class="row g-0">
            <div class="col-md-4 gradient-custom text-center text-white"
              style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
              <img src="{{avatar}}" alt="Avatar" class="img-fluid my-5" style="width: 200px; padding:10px; border-radius:20px"  />
              <h5>{{name}}</h5>
              <i class="far fa-edit mb-5"></i>
            </div>
            <div class="col-md-8">
              <div class="card-body p-4">
                <h6 class="animate-character" style="font-size:smaller">Information</h6>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-6 mb-3">
                    <h6 style="color: rgb(148, 100, 245)">Username:</h6>
                    <p class="text-muted">{{username}}</p>
                  </div>
                    <div class="col-6 mb-3">
                    <h6 style="color: rgb(148, 100, 245)">Email:</h6>
                    <p class="text-muted">{{email}}</p>
                  </div>
                  <div class="col-6 mb-3">
                    <h6 style="color: rgb(148, 100, 245)">Phone:</h6>
                    <p class="text-muted">{{phone}}</p>
                  </div>
                  
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>